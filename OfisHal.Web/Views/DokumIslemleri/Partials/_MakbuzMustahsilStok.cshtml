@model List<VohalStokHareketi>
@{
    var dt = Model;
}
<div class="row">
    <div class="table-responsive">
        <table class="table table-sm table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Mal</th>
                    <th>Kap</th>
                    <th>Gelen Kap</th>
                    <th>Satýlan Kap</th>
                    <th>Gelen Kilo</th>
                    <th>Satýlan Kilo</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model.ElementAt(i);
                    <tr>
                        <td>@item.MalKodu</td>
                        <td>@item.KapAdi</td>
                        <td>@item.KapSayisi</td>
                        <td>@item.SatilanKap</td>
                        <td>@item.Miktar</td>
                        <td>@item.SatilanMiktar</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
