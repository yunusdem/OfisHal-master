                <input type="text" data-type="num" name="iadesiKap" id="iadesiKap" class="form-control form-control-sm" value="0" />
            </div>
        </div>
        <div class="row">
            <label for="toplamKap" class="col-sm-4 col-form-label pb-0">Toplam Kap</label>
            <div class="col-sm-8">
                <input type="text" data-type="num" name="toplamKap" id="toplamKap" class="form-control form-control-sm" value="0" />
            </div>
        </div>
    </div>
    <div class="col">
        <div class="row">
            <label for="iadeliKap" class="col-sm-4 col-form-label pb-0">Ýadeli Kap</label>
            <div class="col-sm-8">
                <input type="text" data-type="num" name="iadeliKap" id="iadeliKap" class="form-control form-control-sm" value="0" />
            </div>
        </div>
        <div class="row">
            <label for="toplamKilo" class="col-sm-4 col-form-label pb-0">Toplam Kilo</label>
            <div class="col-sm-8">
                <input type="text" data-type="num" name="toplamKilo" id="toplamKilo" class="form-control form-control-sm" value="0" />
            </div>
        </div>
    </div>
</div>
