        var item = evrakdataView.items[rowId];
        item.kdv = parseFloat((parseFloat(item.masraf) * parseFloat(item.kdvoran)) / 100).toFixed(2);
        item.toplam = parseFloat(parseFloat(item.kdv) + parseFloat(item.masraf)).toFixed(2);
        evrakgrid.updateRow(rowId);
