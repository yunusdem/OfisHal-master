        if (kesildimi)
            formData += "&kesildiBut=true";

        $.ajax({
            type: "POST",
            url: "/DokumIslemleri/Makbuz",
            //data: formData ,
            data: formData,
            success: function (response) {
                if (kesildimi) {
                    ShowAlert(true, "Ýþlem Baþarýlý");
                    location.href = "/DokumIslemleri/sonrakiOncekiKayit?afterOrBefore=false&currentId=" + $("#MakbuzId").val() + "&redirectAction=Makbuz";
                } else {
                    ShowAlert(true, "Ýþlem Baþarýlý");
                    location.href = "/DokumIslemleri/Makbuz/?faturaId=" + $("#MakbuzId").val();
                }
            },
