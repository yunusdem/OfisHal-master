@{
    ViewBag.title = "Stok İade";

    ViewBag.pagetitle = "Döküm İşlemleri";
    ViewBag.ptitle = "Stok İade";
}
<style>
    .choices__inner {
        min-height: 0;
        font-size: .750rem;
    }

    .choices__list--single {
        padding: 0;
    }
</style>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <label for="date" class="col-sm-3 col-form-label pb-0">
                        Tarih
                    </label>
                    <div class="col-sm-9">
                        <input type="date" name="date" id="date" class="form-control form-control-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <label for="description" class="col-sm-3 col-form-label pb-0">
                        Açıklama
                    </label>
                    <div class="col-sm-9">
                        <input type="text" name="description" id="description" class="form-control form-control-sm" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-1">
    <div class="col-md-3">
        <button class="btn btn-sm btn-secondary">Yazdır</button>
        <button class="btn btn-sm btn-secondary">Düzeltme</button>
        <button class="btn btn-sm btn-secondary">Depo Bakiye</button>
    </div>
</div>

<div class="row my-1">
    <div class="col" data-simplebar style="max-height: 230px;">
        <table class="table table-sm table-bordered mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Müstahsil Kodu</th>
                    <th>Müstahsil Adı</th>
                    <th>Döküm Bilgisi</th>
                    <th>Kap Kodu</th>
                    <th>Mal Adı</th>
                    <th>Kap</th>
                    <th>Miktar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>111</td>
                    <td>ahmet</td>
                    <td>dokum bilgisi</td>
                    <td>a123</td>
                    <td>domates</td>
                    <td>889</td>
                    <td>3000</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <span class="bg-info-subtle">F6) SATIRLARI TEMIZLE</span>
    </div>
    <div class="col-md-4 d-flex justify-content-center align-items-center">
        <button class="btn btn-success">Kaydet</button>
    </div>
    <div class="col-md-4">
        <div class="row">
            <label for="total" class="col-sm-4 col-form-label">
                Kap Toplamı
            </label>
            <div class="col-sm-8">
                <input type="text" name="total" id="total" class="form-control form-control-sm" disabled />
            </div>
        </div>
    </div>
</div>