@model ForgotPasswordViewModel
<main aria-labelledby="title">
    <h2 id="title">@ViewData["Title"].</h2>
    <form action="@Url.Action("ForgotPassword", "Account")" method="post" role="form">
        @Html.AntiForgeryToken()
        <h4>E-postanızı girin.</h4>
        <hr />
        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
        <div class="row">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.UserName, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10">
                <button class="btn btn-outline-dark">Gönder</button>
            </div>
        </div>
    </form>
</main>
