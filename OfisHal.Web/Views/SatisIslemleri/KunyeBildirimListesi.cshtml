@{
    ViewBag.title = "Künye Bildirim Lisesi";

    ViewBag.pagetitle = "Satış İşlemleri";
    ViewBag.ptitle = "Künye Bildirim Lisesi";
}
<form method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <label for="firstDate" class="col-sm-4 col-form-label">
                            İlk Tarih
                        </label>
                        <div class="col-sm-8">
                            <input type="date" name="firstDate" id="firstDate" class="form-control form-control-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <label for="lastDate" class="col-sm-4 col-form-label">
                            Son Tarih
                        </label>
                        <div class="col-sm-8">
                            <input type="date" name="lastDate" id="lastDate" class="form-control form-control-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-success">Künyeleri Listele</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="row my-1">
    <div class="col" data-simplebar style="max-height: 350px;">
        <table class="table table-sm table-bordered mb-0">
            <thead class="bg-light-subtle">
                <tr>
                    <th>Tarih</th>
                    <th>Fatura No</th>
                    <th>Satır No</th>
                    <th>Mağaza Kodu</th>
                    <th>Mağaza Adı</th>
                    <th>Müşteri Kodu</th>
                    <th>Müşteri Adı</th>
                    <th>Üretici Adı</th>
                    <th>Müstahsil Adı</th>
                    <th>Mal Kodu</th>
                    <th>Mal Adı</th>
                    <th>Miktar</th>
                    <th>Stok Künye No</th>
                    <th>Stok Künye Tarihi</th>
                    <th>Satış Künye No</th>
                    <th>Satış Künye Tarihi</th>
                    <th>Yer Adı</th>
                    <th>Hks Üretim Şekli</th>
                    <th>Plaka No</th>
                    <th>Stok Fiyatı</th>
                    <th>Satış Fiyatı</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<div class="row mb-3">
    <div class="col">
        <button class="btn btn-sm btn-secondary">Etiket Bilgilerini Al</button>
        <button class="btn btn-sm btn-secondary">Excele Aktar</button>
        <button class="btn btn-sm btn-secondary">Künye Al</button>
        <button class="btn btn-sm btn-danger">Kapat</button>
    </div>
</div>