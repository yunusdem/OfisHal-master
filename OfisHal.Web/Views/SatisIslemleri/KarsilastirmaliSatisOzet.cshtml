@{
    ViewBag.title = "Karşılaştırmalı Satış Özeti Detayı";

    ViewBag.pagetitle = "Satış İşlemleri";
    ViewBag.ptitle = "Karşılaştırmalı Satış Özeti Detayı";
}
<form method="post">
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <label for="date" class="col-sm-2 col-form-label">
                    Tarih
                </label>
                <div class="col-sm-10">
                    <input type="date" name="date" id="date" class="form-control form-control-sm" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                </div>
            </div>
            <div class="row">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="include" id="include">
                    <label class="form-check-label" for="include">
                        Kesilmeyenler Dahil
                    </label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <button class="btn btn-success">Tamam</button>
                </div>
            </div>
        </div>
    </div>
</form>
