@model IList<VohalRehinFisiBekleyen>
<style>
    table.dataTable.table-sm .sorting:before, table.dataTable.table-sm .sorting_asc:before, table.dataTable.table-sm .sorting_desc:before {
        top: 3px;
        right: 8px;
    }

    table.dataTable.table-sm .sorting:after, table.dataTable.table-sm .sorting_asc:after, table.dataTable.table-sm .sorting_desc:after {
        top: 9px;
    }

    .dt-button {
        margin: 0 !important;
        padding: 2px 5px !important;
    }

    .dt-buttons button:first-child {
        border-radius: 5px 0 0 5px !important;
    }

    .dt-buttons button:last-child {
        border-radius: 0 5px 5px 0 !important;
    }
</style>
<div class="table-responsive">
    <table class="display table table-hover table-sm mt-0" id="rehinIadeFaturalar" style="width:100%;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fatura No</th>
                <th scope="col">Ref. No</th>
                <th scope="col">Tarih</th>
                <th scope="col">Müþteri Adý</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @{
                // ayný müþteri ve faturaya ait kayýtlarda 1 
                var groupedData = Model.GroupBy(x => new { x.CariKartId, x.MusteriKodu, x.MusteriAdi, x.FaturaId, x.FaturaNo, x.RefNo });
            }
            @for (var i = 0; i < groupedData.Count(); i++)
            {
                var group = groupedData.ElementAtOrDefault(i);
                var item = group.First();
                <tr class="rows" ondblclick="closeModal()">
                    <th scope="row">
                        @(i + 1)
                        <input type="radio" name="carihareket" data-id="@item.FaturaId" class="form-check-input ms-1" />
                    </th>
                    <td>@item.FaturaNo</td>
                    <td>@item.RefNo</td>
                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                    <td>@item.MusteriAdi</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).on("click", "tbody .rows", function (e) {
        $(this).find("input").prop("checked", true);
    });
    $(document).ready(function () {
        CreateDatatable('#rehinIadeFaturalar');
    });
    $(document).on("click", "#modalSaveBtn", function (e) {
        closeModal();
    });
    function closeModal() {
        var item = $("#rehinIadeFaturalar").find("input:checked");
        sessionStorage.setItem("rehinIadeFatId", item.data("id"));
        $("#modal").modal("hide");
    }
</script>