@model Tuple<IList<VohalBankaHesabi>, List<SelectListItem>>
<style>
    table.dataTable.table-sm .sorting:before, table.dataTable.table-sm .sorting_asc:before, table.dataTable.table-sm .sorting_desc:before {
        top: 3px;
        right: 8px;
    }

    table.dataTable.table-sm .sorting:after, table.dataTable.table-sm .sorting_asc:after, table.dataTable.table-sm .sorting_desc:after {
        top: 9px;
    }

    .dt-button {
        margin: 0 !important;
        padding: 2px 5px !important;
    }

    .dt-buttons button:first-child {
        border-radius: 5px 0 0 5px !important;
    }

    .dt-buttons button:last-child {
        border-radius: 0 5px 5px 0 !important;
    }
</style>
<div class="table-responsive">
    <table class="table table-hover table-sm mt-0" id="bankaHesaplarTablo" style="width:100%;">
        <thead>
            <tr>
                <td>
                    <button id="ekleHesapBtn" class="btn btn-sm btn-primary">Ekle</button>
                </td>
                <td>
                    <input id="ekleHesapNo" type="text" class="form-control form-control-sm" placeholder="Hesap No" />
                </td>
                <td>
                    <input id="ekleHesapAd" type="text" class="form-control form-control-sm" placeholder="Hesap Adı" />
                </td>
                <td>
                    <input id="ekleSubeAd" type="text" class="form-control form-control-sm" placeholder="Şube Adı" />
                </td>
                <td>
                    <select class="form-control form-control-sm" id="ekleBanka">
                        @foreach (var item in Model.Item2)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Hesap No</th>
                <th scope="col">Hesap Adı</th>
                <th scope="col">Şube Adı</th>
                <th scope="col">Banka Adı</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @for (var i = 0; i < Model.Item1.Count; i++)
            {
                var item = Model.Item1.ElementAtOrDefault(i);
                <tr class="rows" ondblclick="closeModal()">
                    <th scope="row">
                        @(i + 1)
                        @if (Request.QueryString["isInput"] == "True" || Request.QueryString["isNavigator"] == "true")
                        {
                            <input type="radio" name="bankahesaplar" data-id="@item.BankaHesabiId" class="form-check-input ms-1" data-name="@item.HesapAdi" data-number="@item.HesapNo" />
                        }
                        else
                        {
                            <input type="checkbox" data-id="@item.BankaHesabiId" class="form-check-input ms-1" data-name="@item.HesapAdi" data-no="@item.HesapNo" />
                        }
                    </th>
                    <td>@item.HesapNo</td>
                    <td>@item.HesapAdi</td>
                    <td>@item.SubeAdi</td>
                    <td>@item.BankaAdi</td>
                </tr>
            }
        </tbody>
    </table>
    <input id="modalTarget" type="hidden" value="@Request.QueryString["target"]" />
    <input id="isinput" type="hidden" value="@Request.QueryString["isInput"]" />
    <input id="inputtype" type="hidden" value="@Request.QueryString["inputType"]" />
    <input id="isnavigator" type="hidden" value="@Request.QueryString["isNavigator"]" />
</div>

<script>
    $(document).on("click", "#ekleHesapBtn", function (e) {
        var no = $("#ekleHesapNo");
        var hesapad = $("#ekleHesapAd");
        var subead = $("#ekleSubeAd");
        var banka = $("#ekleBanka");

        if (no.val() == "") {
            alert("Hesap No dolu olmalı");
            no.focus();
        }
        else if (hesapad.val() == "") {
            alert("Hesap Adı dolu olmalı");
            hesapad.focus();
        }
        else if (subead.val() == "") {
            alert("Şube Adı dolu olmalı");
            subead.focus();
        } else if (banka.val() == null) {
            alert("Banka Alanı dolu olmalı");
        }
        else {
            no = no.val();
            hesapad = hesapad.val();
            subead = subead.val();
            banka = banka.val();
            $.post("@Url.Action("BankaHesapKaydet")", { no, hesapad, subead, banka }, function (data, status) {
                if (status = "success") {
                    $("#modalContent").empty();
                    $("#modalContent").html(data);
                }
                else {
                    alert("Hata: " + status);
                }
            });
        }
    });

    $(document).on("click", "tbody .rows", function (e) {
        $(this).find("input").prop("checked", true);
    });
    $(document).ready(function () {
        CreateDatatable('#bankaHesaplarTablo');
    });
    $(document).on("click", "#modalSaveBtn", function (e) {
        closeModal();
    });
    function closeModal() {
        var target = $("#" + $("#modalTarget").val());
        var isInput = $("#isinput").val();
        var inputType = $("#inputtype").val();
        var isNavigator = $("#isnavigator").val();
        target.empty();
        target.removeAttr("data-id");
            var item = $("#bankaHesaplarTablo").find("input:checked");
        if (isInput) {
            inputType == "name" ? target.val(item.data("name")) : target.val(item.data("number"));
            target.attr("data-id", item.data("id"));
        } else if (isNavigator) {
            sessionStorage.setItem("bankHesabiId", item.data("id"));
        }else {
            $("#bankaHesaplarTablo").find("input:checked").each(function (i, e) {
                var item = $(e);
                target.append(new Option(item.data("name"), item.data("id"), null, true));
            });
        }
        $("#modal").modal("hide");
        setTimeout(function () {
            clickEnter(target);
        }, 500);
    }
</script>