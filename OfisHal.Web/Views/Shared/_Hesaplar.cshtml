@model IList<OfisHal.Web.Models.VohalHesap>
<style>
    table.dataTable.table-sm .sorting:before, table.dataTable.table-sm .sorting_asc:before, table.dataTable.table-sm .sorting_desc:before {
        top: 3px;
        right: 8px;
    }

    table.dataTable.table-sm .sorting:after, table.dataTable.table-sm .sorting_asc:after, table.dataTable.table-sm .sorting_desc:after {
        top: 9px;
    }

    .dt-button {
        margin: 0 !important;
        padding: 2px 5px !important;
    }

    .dt-buttons button:first-child {
        border-radius: 5px 0 0 5px !important;
    }

    .dt-buttons button:last-child {
        border-radius: 0 5px 5px 0 !important;
    }
</style>
<div class="table-responsive">
    <table class="table table-hover table-sm mt-0" id="hesaplarTablo" style="width:100%;">
        <thead>
            <tr>
                <td>
                    <button id="ekleHesapBtn" class="btn btn-sm btn-primary">Ekle</button>
                </td>
                <td>
                    <input id="ekleHesapAd" type="text" class="form-control form-control-sm" placeholder="Ad" />
                </td>
                <td>
                    <input id="ekleHesapKod" type="text" class="form-control form-control-sm" placeholder="Kod" />
                </td>
            </tr>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ad</th>
                <th scope="col">Kod</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @for (var i = 0; i < Model.Count; i++)
            {
                var item = Model.ElementAtOrDefault(i);
                <tr class="rows" ondblclick="closeModal()">
                    <th scope="row">
                        @(i + 1)
                        @if (Request.QueryString["isInput"] == "True" || Request.QueryString["isNavigator"] == "true")
                        {
                            <input type="radio" name="hesaplar" data-id="@item.HesapId" class="form-check-input ms-1" data-name="@item.Ad" data-code="@item.Kod" data-kdvoran="@item.KdvOrani" data-kesoran="@item.KesintiOrani" />
                        }
                        else
                        {
                            <input type="checkbox" data-id="@item.HesapId" class="form-check-input ms-1" data-name="@item.Ad" />
                        }
                    </th>
                    <td>@item.Ad</td>
                    <td>@item.Kod</td>
                </tr>
            }
        </tbody>
    </table>
    <input id="modalTarget" type="hidden" value="@Request.QueryString["target"]" />
    <input id="isCode" type="hidden" value="@Request.QueryString["isCode"]" />
    <input id="isinput" type="hidden" value="@Request.QueryString["isInput"]" />
    <input id="inputtype" type="hidden" value="@Request.QueryString["inputType"]" />
    <input id="isnavigator" type="hidden" value="@Request.QueryString["isNavigator"]" />
</div>

<script>
    $(document).on("click", "#ekleHesapBtn", function (e) {
        var ad = $("#ekleHesapAd");
        var kod = $("#ekleHesapKod");
        var isCode = $("#isCode");

        if (ad.val() == "") {
            alert("Ad dolu olmalı");
            ad.focus();
        }
        else if (kod.val() == "") {
            alert("Kod dolu olmalı");
            kod.focus();
        }
        else {
            ad = ad.val();
            kod = kod.val();
            isCode = isCode.val();
            $.post("@Url.Action("HesapKaydet")", { ad, kod, isCode }, function (data, status) {
                if (status = "success") {
                    $("#modalContent").empty();
                    $("#modalContent").html(data);
                }
                else {
                    alert("Hata: " + status);
                }
            });
        }
    });

    $(document).on("click", "tbody .rows", function (e) {
        $(this).find("input").prop("checked", true);
    });
    $(document).ready(function () {
        CreateDatatable('#hesaplarTablo');
    });
    $(document).on("click", "#modalSaveBtn", function (e) {
        closeModal();
    });
    function closeModal() {
        var target = $("#" + $("#modalTarget").val());
        var isInput = $("#isinput").val();
        var inputType = $("#inputtype").val();
        var isNavigator = $("#isnavigator").val();
        target.empty();
        target.removeAttr("data-id");
        var item = $("#hesaplarTablo").find("input:checked");
        if (isInput) {
            inputType == "name" ? target.val(item.data("name")) : target.val(item.data("code"));
            target.attr("data-id", item.data("id"));
            target.attr("data-kdvoran", item.data("kdvoran"));
            target.attr("data-kesoran", item.data("kesoran"));
        } else if (isNavigator) {
            sessionStorage.setItem("hesapId", item.data("id"));
        }
        else {
            $("#hesaplarTablo").find("input:checked").each(function (i, e) {
                var item = $(e);
                target.append(new Option(item.data("name"), item.data("id"), null, true));
            });
        }
        $("#modal").modal("hide");
        setTimeout(function () {
            clickEnter(target);
        }, 500);
    }
</script>