@model IEnumerable<TohalBankaHesabi>

@{

    ViewBag.Title = "Banka Hesabı";

    ViewBag.pTitle = "Banka Hesabı";
    ViewBag.pageTitle = "Banka İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <!--datatable css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <!--datatable responsive css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
}

<p>
    <a class="btn btn-success waves-effect waves-light" action="@Url.Action("Create")">Yeni Kayıt</a>
</p>
<table class="table" id="BankaTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HesapNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HesapAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iban)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubeAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EFaturadaGozuksun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MuhHesap)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HesapNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HesapAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Iban)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubeAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Devir)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EFaturadaGozuksun)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Banka.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MuhHesap.Ad)
                </td>
                <td>
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-more-fill align-middle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.BankaHesabiId">
                                    <i class="ri-eye-fill align-bottom me-2 text-muted"></i> Görüntüle
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item edit-item-btn" href="@Url.Action("Edit",new {id=item.BankaHesabiId})">
                                    <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Düzenle
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item remove-item-btn" href="@Url.Action("Delete",new {id=item.BankaHesabiId})">
                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Sil
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!--datatable js-->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <script>
        /*
        Template Name: OfisHal - Admin & Dashboard Template
        Author: Themesbrand
        Website: https://Themesbrand.com/
        Contact: Themesbrand@gmail.com
        File: datatables init js
        */

        //buttons exmples
        document.addEventListener('DOMContentLoaded', function () {
            let table = new DataTable('#BankaTable', {
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'print', 'pdf'
                ],
                responsive: true
            });
        });

    </script>
}